<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A1F38"
                android:centerColor="#0F1629"
                android:endColor="#0A0E1A"
                android:angle="135"
                android:type="linear"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    
    <!-- Inner glow effect -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20C9A24D"
                android:endColor="#00C9A24D"
                android:angle="90"
                android:type="linear"/>
            <corners android:radius="27dp"/>
        </shape>
    </item>
    
    <!-- Border accent -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#30C9A24D"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
</layer-list>
