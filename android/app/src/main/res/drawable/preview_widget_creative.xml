<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FF0F1629" />
            <stroke android:width="1dp" android:color="#33FFFFFF" />
        </shape>
    </item>
    
    <!-- Top Row: Date & Next Prayer -->
    <item android:top="15dp" android:left="15dp">
        <shape android:shape="rectangle">
            <size android:width="80dp" android:height="10dp" />
            <corners android:radius="4dp" />
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>
    <item android:top="15dp" android:right="15dp" android:gravity="right">
        <shape android:shape="rectangle">
            <size android:width="60dp" android:height="10dp" />
            <corners android:radius="4dp" />
            <solid android:color="#FFC9A24D" />
        </shape>
    </item>
    
    <!-- Middle: Time Remaining -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="30dp" />
            <corners android:radius="4dp" />
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>
    
    <!-- Bottom: Prayer Grid -->
    <item android:bottom="15dp" android:gravity="bottom|center_horizontal">
         <shape android:shape="rectangle">
            <size android:width="200dp" android:height="20dp" />
            <solid android:color="#33FFFFFF" />
        </shape>
    </item>
</layer-list>