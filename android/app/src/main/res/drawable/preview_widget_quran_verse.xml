            <corners android:radius="16dp" />
            <solid android:color="#FF0F1629" />
            <stroke android:width="1dp" android:color="#33FFFFFF" />
        </shape>
    </item>
    
    <!-- Verse Text -->
    <item android:gravity="center" android:left="20dp" android:right="20dp">
         <shape android:shape="rectangle">
            <size android:height="40dp" />
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>
    
    <!-- Source -->
    <item android:gravity="bottom|right" android:bottom="15dp" android:right="20dp">
         <shape android:shape="rectangle">
            <size android:width="60dp" android:height="10dp" />
            <solid android:color="#FFC9A24D" />
        </shape>
    </item>
