<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FF0F1629" />
            <stroke android:width="1dp" android:color="#33FFFFFF" />
        </shape>
    </item>

    <!-- Header Left -->
    <item android:top="15dp" android:left="15dp">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="12dp" />
            <corners android:radius="4dp" />
            <solid android:color="#FFC9A24D" />
        </shape>
    </item>

    <!-- Header Right -->
    <item android:top="15dp" android:right="15dp" android:gravity="right">
        <shape android:shape="rectangle">
            <size android:width="50dp" android:height="12dp" />
            <corners android:radius="4dp" />
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>
    
    <!-- Divider -->
    <item android:top="40dp" android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="#22FFFFFF" />
        </shape>
    </item>

    <!-- Columns (Simulated) -->
    <item android:top="55dp" android:left="20dp">
        <shape android:shape="rectangle">
             <size android:width="15dp" android:height="25dp" />
             <solid android:color="#44FFFFFF" />
        </shape>
    </item>
    <item android:top="55dp" android:left="60dp">
        <shape android:shape="rectangle">
             <size android:width="15dp" android:height="25dp" />
             <solid android:color="#44FFFFFF" />
        </shape>
    </item>
    <item android:top="55dp" android:gravity="center_horizontal">
        <shape android:shape="rectangle">
             <size android:width="15dp" android:height="25dp" />
             <solid android:color="#FFC9A24D" />
        </shape>
    </item>
    <item android:top="55dp" android:right="60dp" android:gravity="right">
        <shape android:shape="rectangle">
             <size android:width="15dp" android:height="25dp" />
             <solid android:color="#44FFFFFF" />
        </shape>
    </item>
    <item android:top="55dp" android:right="20dp" android:gravity="right">
        <shape android:shape="rectangle">
             <size android:width="15dp" android:height="25dp" />
             <solid android:color="#44FFFFFF" />
        </shape>
    </item>

</layer-list>