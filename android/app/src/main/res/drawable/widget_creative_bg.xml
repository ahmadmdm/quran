<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1E2746"
                android:centerColor="#141B2D"
                android:endColor="#0A0E1A"
                android:angle="135"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Subtle top highlight -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#15C9A24D"
                android:endColor="#00C9A24D"
                android:angle="90"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#25C9A24D"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</layer-list>
