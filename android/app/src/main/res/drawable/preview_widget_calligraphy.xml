<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#FF0F1629" />
        </shape>
    </item>
    
    <!-- Simulated Text (Day Name) -->
    <item android:top="20dp" android:bottom="50dp" android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Simulated Text (Date) -->
    <item android:top="90dp" android:bottom="20dp" android:left="40dp" android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#AAFFFFFF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>