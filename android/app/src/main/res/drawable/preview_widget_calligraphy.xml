<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#FF0F1629" />
            <stroke android:width="1dp" android:color="#33FFFFFF" />
        </shape>
    </item>
    
    <!-- Simulated Calligraphy Text (Wavy Shape) -->
    <item android:gravity="center" android:top="20dp" android:bottom="40dp" android:left="30dp" android:right="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
            <corners android:radius="100dp" /> <!-- Pill shape -->
            <size android:height="30dp" android:width="100dp" />
        </shape>
    </item>
    
    <!-- Dot for aesthetics -->
    <item android:gravity="center|top" android:top="30dp">
         <shape android:shape="oval">
            <solid android:color="#FFFFFFFF" />
            <size android:width="8dp" android:height="8dp" />
        </shape>
    </item>

    <!-- Date Text Simulation -->
    <item android:gravity="bottom|center_horizontal" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#AAFFFFFF" />
            <corners android:radius="4dp" />
            <size android:width="80dp" android:height="8dp" />
        </shape>
    </item>
</layer-list>