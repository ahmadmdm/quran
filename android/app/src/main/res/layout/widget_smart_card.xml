<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_smart_card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_gradient_bg"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header with Next Prayer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_header_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الصلاة القادمة"
                    android:textColor="#88FFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_next_prayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الفجر"
                    android:textColor="#C9A24D"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-02:45"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Divider -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Prayer Times Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Item 0 (Fajr) -->
            <LinearLayout
                android:id="@+id/item_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_name_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الفجر"
                    android:textColor="#C9A24D"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_time_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="05:30"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Item 1 (Dhuhr) -->
            <LinearLayout
                android:id="@+id/item_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الظهر"
                    android:textColor="#88FFFFFF"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_time_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="12:15"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Item 2 (Asr) -->
            <LinearLayout
                android:id="@+id/item_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="العصر"
                    android:textColor="#88FFFFFF"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_time_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="15:30"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Item 3 (Maghrib) -->
            <LinearLayout
                android:id="@+id/item_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المغرب"
                    android:textColor="#88FFFFFF"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_time_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="18:00"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Item 4 (Isha) -->
            <LinearLayout
                android:id="@+id/item_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="العشاء"
                    android:textColor="#88FFFFFF"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_time_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="19:30"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
