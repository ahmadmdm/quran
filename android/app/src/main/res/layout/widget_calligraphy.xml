<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_calligraphy_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="8dp">

    <!-- Background Image/Color -->
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/widget_gradient_bg"
        android:alpha="1.0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Day Name (Large Calligraphy Style) -->
        <TextView
            android:id="@+id/tv_day_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الأحد"
            android:textColor="#FFFFFF"
            android:textSize="56sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="0.8"/>

        <!-- Date (Hijri/Gregorian) -->
        <TextView
            android:id="@+id/tv_full_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="٢٠ شعبان، ١٤٤٧"
            android:textColor="#E0E0E0"
            android:textSize="18sp"
            android:fontFamily="sans-serif-light"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

    </LinearLayout>

</RelativeLayout>
